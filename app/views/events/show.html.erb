<div class="container">
    <div class="row">
        <div class="col-3">
        </div>
        <div class="col-6">
            <% status_messages(@event) %>
            <div class="border border-3 rounded p-4 bg-light my-1">
                <div class="d-flex justify-content-center m-1 border-bottom">
                    <p class="text-uppercase"> <%= @event.title %> </p> 
                    <p class=<%= date_color_status(@event)%> ><%= event_date_status(@event)%></p>
                </div>
                <div class="d-flex justify-content-between m-1">
                    <p>Confirmed Assistence: <%= attedees_count(@event) %>/<%= @event.tpeople%></p>
                    <p class="text-break text-muted"> date <%= @event.date %></p>
                </div>
                <div class="d-flex justify-content-between m-1 d-flex">
                    <p>Type of Event: <%= @event.eventtype %> </p>
                    <p>Category: <%= @event.eventcategory %></p>
                </div>
                <div class="container shadown border rounded shadow-sm bg-light py-2 my-2">
                    <p>Description: </p>
                    <p class="text-break"><%= @event.description %></p>
                </div>
                <div class="d-flex justify-content-between m-1" >
                    <p class="shadown ms-auto">Frequency: <%= @event.frequency %></p>
                </div> 
                <div class="d-flex justify-content-between m-1 border-bottom" >
                    <p>Location: <%= @event.location %></p>
                </div>    
                <div class="d-flex justify-content-between my-2" >
                    <p> Owner <%= @event.user.name %></p>
                    <div class="d-flex justify-content-end m-1" >
                        <% modify_event(@event).each do |mlinks|%>
                            <%= mlinks %>
                        <%end%>
                    </div>   
                </div>
                               
            </div>
            <% invitations_owner_check(@event).each do |checked|%>
                <%= checked %>
            <%end%>
        </div>
        <div class="col-3">
        </div>
    </div>
</div>